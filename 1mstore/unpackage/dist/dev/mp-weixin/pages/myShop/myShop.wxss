.myShop .businessInfo {
  background-color: #fff;
  box-shadow: 0rpx 3rpx 6rpx 1rpx rgba(0, 0, 0, 0.09), inset 0rpx 3rpx 6rpx 1rpx rgba(0, 0, 0, 0.1);
}
.myShop .businessInfo .img-search {
  padding: 25rpx;
  padding-top: 0rpx;
}
.myShop .businessInfo .img-search image {
  display: block;
  width: 28rpx;
  height: 24rpx;
}
.myShop .businessInfo .img-search .search .u-field {
  padding-right: 0;
}
.myShop .businessInfo .img-search .search .u-field .u-field-inner {
  width: 180rpx;
  background: #FFFFFF;
  border-radius: 6rpx;
  opacity: 1;
  border: 1rpx solid #999999;
}
.myShop .businessInfo .img-search .search .u-field .u-icon {
  margin-right: 10rpx;
  margin-left: 0rpx;
}
.myShop .businessInfo .img-search .search .u-field::after {
  border-bottom-width: 0;
}
.myShop .businessInfo .img-search .search .u-field .u-flex {
  margin-right: 0 !important;
}
.myShop .businessInfo .busInfo {
  padding: 20rpx 40rpx ;
  padding-top: 0rpx;
  align-items: flex-start;
}
.myShop .businessInfo .busInfo .header-name {
  display: flex;
}
.myShop .businessInfo .busInfo .header-name .header {
  width: 116rpx;
  height: 116rpx;
  border: 1rpx solid red;
}
.myShop .businessInfo .busInfo .header-name .header image {
  width: 10%;
  height: 100%;
  display: block;
}
.myShop .businessInfo .busInfo .header-name .name-address {
  margin-left: 20rpx;
}
.myShop .businessInfo .busInfo .header-name .name-address .name {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
}
.myShop .businessInfo .busInfo .header-name .name-address .name .u-icon {
  margin-left: 10rpx;
}
.myShop .businessInfo .busInfo .header-name .name-address .address {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #999896;
}
.myShop .businessInfo .busInfo .header-name .name-address .address .text {
  margin-left: 10rpx;
}
.myShop .businessInfo .busInfo .iamge {
  display: flex;
}
.myShop .businessInfo .busInfo .iamge .printer image,
.myShop .businessInfo .busInfo .iamge .business_h image {
  display: block;
  width: 49rpx;
  height: 49rpx;
}
.myShop .businessInfo .busInfo .iamge .printer .text,
.myShop .businessInfo .busInfo .iamge .business_h .text {
  margin-top: 5rpx;
  color: #35A2F6;
  font-size: 18rpx;
  font-weight: 500;
}
.myShop .businessInfo .busInfo .iamge .business_h {
  margin-left: 66rpx;
}
.myShop .businessInfo .busInfo .iamge .business_h .text {
  color: #FF6B6B;
}
.myShop .businessInfo .busTurnover {
  display: flex;
  padding: 20rpx 0;
}
.myShop .businessInfo .busTurnover .turnover,
.myShop .businessInfo .busTurnover .order,
.myShop .businessInfo .busTurnover .visitor {
  flex: 1;
  border-right: 1rpx solid rgba(51, 51, 51, 0.2);
}
.myShop .businessInfo .busTurnover .turnover .newCount,
.myShop .businessInfo .busTurnover .order .newCount,
.myShop .businessInfo .busTurnover .visitor .newCount {
  font-size: 36rpx;
  font-weight: bold;
  color: #FB2626;
}
.myShop .businessInfo .busTurnover .turnover .oldCount,
.myShop .businessInfo .busTurnover .order .oldCount,
.myShop .businessInfo .busTurnover .visitor .oldCount {
  font-size: 22rpx;
  font-weight: 500;
  color: #999999;
  margin: 15rpx 0;
}
.myShop .businessInfo .busTurnover .turnover .text,
.myShop .businessInfo .busTurnover .order .text,
.myShop .businessInfo .busTurnover .visitor .text {
  font-size: 28rpx;
}
.myShop .businessInfo .busTurnover .visitor {
  border: none;
}
.myShop .modular {
  margin-top: 25rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 3rpx 6rpx 1rpx rgba(0, 0, 0, 0.09);
  padding: 25rpx;
}
.myShop .modular .title {
  padding-bottom: 25rpx;
  border-bottom: 1rpx solid #EAEAEA;
  font-size: 32rpx;
  font-weight: bold;
}
.myShop .modular .list {
  padding: 25rpx;
  display: flex;
  flex-wrap: wrap;
}
.myShop .modular .list .v-list {
  width: calc(100% / 3);
}
.myShop .modular .list .v-list:nth-of-type(3n + 1) {
  align-items: flex-start;
}
.myShop .modular .list .v-list:nth-of-type(3n) {
  align-items: flex-end;
}
.myShop .modular .list .v-list:nth-of-type(n + 4) {
  margin-top: 40rpx;
}
.myShop .modular .list .v-list .item image {
  width: 52rpx;
  height: 52rpx;
  display: block;
}
.myShop .modular .list .v-list .item .name {
  font-size: 22rpx;
  font-weight: 400;
  margin-top: 15rpx;
}

