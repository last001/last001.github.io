.pending {
  position: relative;
}
.pending .titleList {
  padding: 20rpx;
  padding-bottom: 0rpx;
  display: flex;
}
.pending .titleList .v-list {
  flex: 1;
  position: relative;
}
.pending .titleList .v-list .list {
  width: 126rpx;
  height: 126rpx;
  background: #FFFFFF;
  box-shadow: 0 3rpx 6rpx 1rpx rgba(0, 0, 0, 0.09);
  border-radius: 26rpx;
  border: 1rpx solid #EAEAEA;
  position: relative;
}
.pending .titleList .v-list .list.active {
  background-color: #f8cf39;
}
.pending .titleList .v-list .list image {
  width: 66rpx;
  height: 66rpx;
  display: block;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -33rpx;
  margin-top: -33rpx;
}
.pending .titleList .v-list .title {
  width: 100%;
  text-align: center;
  margin-top: 20rpx;
}
.pending movable-area {
  pointer-events: none;
  position: fixed;
  left: 25rpx;
  top: 25rpx;
  z-index: 9999;
  width: calc(100vw - 138rpx - 25rpx);
  height: calc(100% - 138rpx - 25rpx);
}
.pending movable-area movable-view {
  pointer-events: auto;
}
.pending movable-area .scan {
  width: 138rpx;
  height: 138rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 3rpx 6rpx 1rpx rgba(0, 0, 0, 0.26);
  border-radius: 69rpx ;
}
.pending movable-area .scan image {
  display: block;
  width: 54rpx;
  height: 54rpx;
}
.pending movable-area .scan .text {
  font-weight: 400;
  color: #999999;
  font-size: 22rpx;
  margin-top: 10rpx;
}

