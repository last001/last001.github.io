.staff {
  position: relative;
  padding-bottom: 120rpx;
}
.staff .titleList {
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;



  z-index: 99;
  background-color: #fff;
  box-shadow: 0px 3rpx 6rpx 1rpx rgba(0, 0, 0, 0.09);
}
.staff .titleList .title {
  flex: 1;
  color: #f8cf39;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  padding: 28rpx 0;
}
.staff .table {
  z-index: 9;
  margin-top: 100rpx;
}
.staff .table .tableList {
  background-color: #fff;
}
.staff .table .tableList .user,
.staff .table .tableList .name,
.staff .table .tableList .job,
.staff .table .tableList .edit {
  box-sizing: border-box;
  border-bottom: none;
  border-left: none;
  border: 1rpx solid rgba(0, 0, 0, 0.06);
  flex: 1;
  text-align: center;
  padding: 28rpx 0;
  font-size: 32rpx;
}
.staff .table .tableList .edit {
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.staff .btn {
  position: fixed;
  bottom: 20rpx;
  left: 5%;
  width: 90%;
}
.staff .btn button {
  background-color: #f8cf39;
  color: #fff;
  border: none;
}

