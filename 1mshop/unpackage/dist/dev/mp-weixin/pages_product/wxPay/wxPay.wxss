.wxPay {
  background-color: #f2f2f2;
  position: relative;




  min-height: 100vh;
}
.wxPay .payMoney {
  background-color: #fff;
  padding: 20rpx;
  padding-bottom: 50rpx;
  color: #333;
  box-shadow: 0px 3rpx 6rpx 1rpx rgba(0, 0, 0, 0.09);
}
.wxPay .payMoney .cancel {
  width: 100%;
  text-align: right;
  font-size: 26rpx;
  color: #999;
  padding-bottom: 20rpx;
}
.wxPay .payMoney .text {
  width: 100%;
  text-align: center;
  font-size: 32rpx;
}
.wxPay .payMoney .money {
  width: 100%;
  text-align: center;
  font-size: 66rpx;
  padding: 20rpx 0;
}
.wxPay .payMoney .time {
  width: 100%;
  display: flex;
  justify-content: center;
  font-size: 32rpx;
  color: #F24849;
}
.wxPay .payMoney .time .u-count-down {
  margin-left: 20rpx;
}
.wxPay .payMoney .time .u-count-down .u-count-down__text {
  color: #F24849;
  font-size: 32rpx;
}
.wxPay .wechatPay {
  padding: 20rpx;
}
.wxPay .wechatPay .v-wechatPay {
  padding: 30rpx 20rpx;
  background-color: #fff;
  border-radius: 18rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}
.wxPay .wechatPay .v-wechatPay .image-text {
  display: flex;
  align-items: center;
}
.wxPay .wechatPay .v-wechatPay .image-text .image {
  width: 46rpx;
  height: 46rpx;
}
.wxPay .wechatPay .v-wechatPay .image-text .image image {
  display: block;
  width: 100%;
  height: 100%;
}
.wxPay .wechatPay .v-wechatPay .image-text .text {
  font-size: 32rpx;
  font-weight: bold;
  margin-left: 20rpx;
}
.wxPay .btn {
  position: absolute;
  bottom: 20rpx;
  left: 5%;
  width: 90%;
}
.wxPay .btn .u-button {
  width: 100%;
}

