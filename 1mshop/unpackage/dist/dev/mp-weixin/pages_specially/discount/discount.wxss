.discount {
  background: linear-gradient(to bottom, #FF7E7EFF, #FF7F7F33);
  padding: 20rpx;




  min-height: calc(100vh - 40rpx);
}
.discount .discount-lists {
  padding: 20rpx;
  background-color: #fff;
  border-radius: 18rpx;
  height: 200rpx;
  display: flex;
  margin-top: 20rpx;
  position: relative;
}
.discount .discount-lists:first-child {
  margin-top: 0;
}
.discount .discount-lists .goods {
  position: absolute;
  top: 15rpx;
  right: 15rpx;
  -webkit-transform: rotateY(180deg);
          transform: rotateY(180deg);
}
.discount .discount-lists .lists-image {
  width: 220rpx;
  height: 190rpx;
  position: relative;
}
.discount .discount-lists .lists-image image {
  border-radius: 9rpx;
  width: 100%;
  height: 100%;
}
.discount .discount-lists .lists-image .time {
  position: absolute;
  left: 0;
  top: 0;
  width: 60rpx;
  height: 26rpx;
  text-align: center;
  line-height: 26rpx;
  color: #fff;
  border-top-left-radius: 9rpx;
  border-bottom-right-radius: 9rpx;
  background-color: #FF7E7E;
  font-size: 18rpx;
}
.discount .discount-lists .lists-text {
  padding: 0 20rpx;
  width: calc(100% - 160rpx);
}
.discount .discount-lists .lists-text .title {
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 28rpx;
}
.discount .discount-lists .lists-text .speed {
  width: 40%;
  padding: 10rpx 0;
  position: relative;
}
.discount .discount-lists .lists-text .speed .u-percentage-text {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: transparent;
  color: #333;
  text-align: center;
  font-size: 20rpx;
  line-height: 44rpx;
}
.discount .discount-lists .lists-text .money {
  font-size: 26rpx;
  color: #F24A49;
}
.discount .discount-lists .lists-text .money text {
  font-weight: bold;
}
.discount .discount-lists .lists-text .money text:first-child {
  font-size: 32rpx;
}
.discount .discount-lists .lists-text .money text:first-child .sign {
  font-size: 22rpx;
}
.discount .discount-lists .lists-text .money text:nth-child(2) {
  margin-left: 20rpx;
  color: #999;
  text-decoration: line-through;
}
.discount .discount-lists .lists-text .btn {
  width: 40%;
  margin-top: 10rpx;
}
.discount .discount-lists .lists-text .btn .u-button {
  width: 100%;
}

