.collage {
  background: linear-gradient(to bottom, #05C0AB, rgba(5, 192, 171, 0.2));
  padding: 20rpx;




  min-height: calc(100vh - 40rpx);
}
.collage .collage-lists {
  padding: 20rpx;
  background-color: #fff;
  border-radius: 18rpx;
  height: 200rpx;
  display: flex;
  margin-top: 20rpx;
}
.collage .collage-lists:first-child {
  margin-top: 0;
}
.collage .collage-lists .lists-image {
  width: 220rpx;
  height: 190rpx;
  position: relative;
}
.collage .collage-lists .lists-image image {
  width: 100%;
  height: 100%;
}
.collage .collage-lists .lists-image .time {
  position: absolute;
  left: 0;
  top: 0;
  width: 60rpx;
  height: 26rpx;
  text-align: center;
  line-height: 26rpx;
  color: #fff;
  border-top-left-radius: 9rpx;
  border-bottom-right-radius: 9rpx;
  background-color: #05C0AB;
  font-size: 18rpx;
}
.collage .collage-lists .lists-text {
  padding: 0 20rpx;
  width: calc(100% - 160rpx);
}
.collage .collage-lists .lists-text .title {
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 28rpx;
}
.collage .collage-lists .lists-text .money {
  font-size: 24rpx;
  color: #F24A49;
  padding: 20rpx 0;
}
.collage .collage-lists .lists-text .money text:nth-child(2) {
  font-size: 32rpx;
  font-weight: bold;
}
.collage .collage-lists .lists-text .money text:nth-child(2) .sign {
  font-size: 22rpx;
}
.collage .collage-lists .lists-text .money text:nth-child(3) {
  margin-left: 20rpx;
  color: #999;
  font-size: 26rpx;
  text-decoration: line-through;
  font-weight: bold;
}
.collage .collage-lists .lists-text .btn {
  width: 40%;
}
.collage .collage-lists .lists-text .btn .u-button {
  width: 100%;
}

