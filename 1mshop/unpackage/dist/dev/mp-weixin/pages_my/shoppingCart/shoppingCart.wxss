.shoppingCart {
  background-color: #f2f2f2;
  padding: 20rpx;




  min-height: calc(100vh - 40rpx);

  position: relative;
}
.shoppingCart .shopping-lists {
  padding: 20rpx;
  background-color: #fff;
  border-radius: 18rpx;
  margin-top: 20rpx;
}
.shoppingCart .shopping-lists:first-child {
  margin-top: 0;
}
.shoppingCart .shopping-lists .u-swipe-action-item__right {
  border: 2rpx solid #fff;
}
.shoppingCart .shopping-lists .swipe-action__content {
  display: flex;
}
.shoppingCart .shopping-lists .swipe-action__content .check {
  display: flex;
  align-items: center;
  justify-content: center;
}
.shoppingCart .shopping-lists .swipe-action__content .image {
  width: 180rpx;
  height: 160rpx;
  margin-left: 10rpx;
}
.shoppingCart .shopping-lists .swipe-action__content .image image {
  width: 100%;
  height: 100%;
  display: block;
}
.shoppingCart .shopping-lists .swipe-action__content .content {
  margin-left: 20rpx;
  width: calc(100% - 240rpx);
}
.shoppingCart .shopping-lists .swipe-action__content .content .title {
  color: #333;
  font-weight: bold;
  font-size: 28rpx;
  padding: 10rpx 0;
}
.shoppingCart .shopping-lists .swipe-action__content .content .setText {
  color: #666;
  font-size: 22rpx;
}
.shoppingCart .shopping-lists .swipe-action__content .content .money-count {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding: 20rpx 0 0;
}
.shoppingCart .shopping-lists .swipe-action__content .content .money-count .money .new {
  color: #F24A49;
  font-size: 26rpx;
}
.shoppingCart .shopping-lists .swipe-action__content .content .money-count .money .old {
  font-size: 22rpx;
  color: #999;
  margin-left: 20rpx;
}
.shoppingCart .shopping-lists .swipe-action__content .content .money-count .count {
  border: 2rpx solid #ccc;
  border-radius: 50rpx;
  box-sizing: border-box;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}
.shoppingCart .shopping-lists .swipe-action__content .content .money-count .count .sub,
.shoppingCart .shopping-lists .swipe-action__content .content .money-count .count .add {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.shoppingCart .shopping-lists .swipe-action__content .content .money-count .count .num {
  width: 40rpx;
  height: 38rpx;
  background-color: #f2f2f2;
  color: #333;
  font-size: 24rpx;
  border: none;
  display: flex;
  justify-content: center;
  align-items: center;
}
.shoppingCart .showDelete .u-popup__content {
  padding: 40rpx;
  border-radius: 40rpx;
}
.shoppingCart .showDelete .u-popup__content .title {
  font-weight: bold;
  width: 100%;
  text-align: center;
  color: #333;
  font-size: 36rpx;
}
.shoppingCart .showDelete .u-popup__content .btns {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 50rpx;
}
.shoppingCart .showDelete .u-popup__content .btns .u-button {
  width: 215rpx;
  height: 66rpx;
}
.shoppingCart .showDelete .u-popup__content .btns .u-button:nth-child(2) {
  margin-left: 20rpx;
}
.shoppingCart .total-reduce {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
}
.shoppingCart .total-reduce .reduce {
  width: 100%;
  background-color: rgba(254, 246, 215, 0.9);
  color: #F8CF39;
  font-size: 24rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
}
.shoppingCart .total-reduce .set-total {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
}
.shoppingCart .total-reduce .set-total .total-btn {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.shoppingCart .total-reduce .set-total .total-btn .text {
  font-size: 24rpx;
}
.shoppingCart .total-reduce .set-total .total-btn .money {
  font-size: 26rpx;
  color: #F24A49;
}
.shoppingCart .total-reduce .set-total .total-btn .btn {
  width: 177rpx;
  height: 66rpx;
  margin-left: 20rpx;
}
.shoppingCart .total-reduce .set-total .total-btn .btn .u-button {
  width: 100%;
  height: 100%;
}

